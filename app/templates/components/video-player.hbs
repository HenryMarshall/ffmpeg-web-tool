<div>
  <button {{action "debug"}}>Debug</button>
  {{playback-rate playbackRate=playbackRate}}
  {{range-endpoint 
      startOrEnd="Start" 
      currentTime=currentTime 
      duration=duration
  }}
  {{range-endpoint
      startOrEnd="End"
      currentTime=currentTime
      duration=duration
  }}
  <button {{action "playPause"}}>{{if isPaused "Play" "Pause"}}</button>
</div>

{{#hb-videojs 
    isPaused=isPaused
    controls=controls
    currentTime=currentTime
    duration=duration
    height=height
    loop=loop
    muted=muted
    playbackRate=playbackRate
    width=width
    volume=volume
}}

  {{hb-videojs-source src="/assets/test_video.webm"}}

{{/hb-videojs}}

